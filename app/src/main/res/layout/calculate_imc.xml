<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar fixa no topo, com constraints -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nome (texto) -->
    <EditText
        android:id="@+id/inputName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seu nome"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Peso (decimal) -->
    <EditText
        android:id="@+id/inputWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Peso (kg)"
        android:inputType="numberDecimal"
        android:imeOptions="actionNext"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputName"
        app:layout_constraintStart_toStartOf="@id/inputName"
        app:layout_constraintEnd_toEndOf="@id/inputName" />

    <!-- Altura (decimal) -->
    <EditText
        android:id="@+id/inputHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Altura (m) ex.: 175"
        android:inputType="numberDecimal"
        android:imeOptions="actionNext"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputWeight"
        app:layout_constraintStart_toStartOf="@id/inputName"
        app:layout_constraintEnd_toEndOf="@id/inputName" />

    <EditText
        android:id="@+id/inputAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Idade"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputHeight"
        app:layout_constraintStart_toStartOf="@id/inputName"
        app:layout_constraintEnd_toEndOf="@id/inputName" />

    <Spinner
        android:id="@+id/spinnerActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/inputAge"
        app:layout_constraintStart_toStartOf="@id/inputName"
        app:layout_constraintEnd_toEndOf="@id/inputName" />

    <RadioGroup
        android:id="@+id/inputSex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerActivity"
        app:layout_constraintStart_toStartOf="@id/inputName"
        app:layout_constraintEnd_toEndOf="@id/inputName">

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino" />

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino" />
    </RadioGroup>

    <Button
        android:id="@+id/calcImcbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calcular IMC"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputSex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
